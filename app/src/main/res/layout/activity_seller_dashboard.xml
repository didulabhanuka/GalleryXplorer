<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller_Dashboard"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dashboard_seller_name"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hello Seller"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <GridLayout
        android:id="@+id/SellerProfile_GridLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:columnCount="2"
        android:orientation="horizontal"
        android:rowCount="4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_seller_name">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_your_profile"
            style="@style/ButtonGreen"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:drawableTop="@drawable/baseline_person_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp"
            android:text="your profile" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_your_items"
            style="@style/ButtonGreen"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:text="your items"
            android:drawableTop="@drawable/baseline_category_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_your_class_items"
            style="@style/ButtonGreen"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:text="your classes"
            android:drawableTop="@drawable/baseline_ondemand_video_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_your_events"
            style="@style/ButtonGreen"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:text="your events"
            android:drawableTop="@drawable/baseline_event_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_your_auction_items"
            style="@style/ButtonGreen"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:text="auction items"
            android:drawableTop="@drawable/baseline_gavel_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_calender"
            style="@style/ButtonGreen"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:text="calender"
            android:drawableTop="@drawable/baseline_calendar_month_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_map"
            style="@style/ButtonGreen"
            android:layout_marginTop="18dp"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:text="map"
            android:drawableTop="@drawable/baseline_map_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_settings"
            style="@style/ButtonGreen"
            android:layout_marginTop="20dp"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_gravity="center_horizontal"
            android:layout_columnWeight="1"
            android:layout_row="3"
            android:text="settings"
            android:drawableTop="@drawable/baseline_settings_24"
            android:drawableTint="@color/black"
            android:paddingTop="10dp" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>