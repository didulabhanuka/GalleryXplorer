<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller_Dashboard"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dashboard_seller_name"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hello Seller"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_seller_name">


        <GridLayout
            android:id="@+id/SellerProfile_GridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_your_profile"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/baseline_person_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="your profile" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_your_items"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/baseline_category_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="your items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_your_class_items"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_ondemand_video_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="your classes" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_your_events"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_event_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="your events" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_your_auction_items"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_gavel_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="auction items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_calender"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_calendar_month_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="calender" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_map"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="18dp"
                android:drawableTop="@drawable/baseline_map_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="map" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_settings"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_settings_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="settings" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signOut"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="4"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_logout_24"
                android:paddingTop="10dp"
                android:text="sign out" />

        </GridLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
