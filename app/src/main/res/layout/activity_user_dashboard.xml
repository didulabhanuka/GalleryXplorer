<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".User_Dashboard"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/dashboard_user_name"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hello User"
        android:textAlignment="textStart"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dashboard_user_name">

        <GridLayout
            android:id="@+id/SellerProfile_GridLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="5"
            app:layout_constraintBottom_toBottomOf="@+id/scrollView"
            app:layout_constraintTop_toBottomOf="@+id/scrollView">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_profile"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="0"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/baseline_person_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="your profile" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_all_items"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:drawableTop="@drawable/baseline_category_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_categories"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_table_rows_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="categories" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_classes"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="1"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_ondemand_video_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="classes" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_events"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_event_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="events" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_auction_items"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="2"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_gavel_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="auction items" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_calender"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_calendar_month_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="calender" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_map"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_map_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="map" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_become_seller"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="3"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_how_to_reg_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="become a seller" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_user_settings"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_settings_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="settings" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_signOut"
                style="@style/ButtonGreen"
                android:layout_width="150dp"
                android:layout_height="110dp"
                android:layout_row="4"
                android:layout_columnWeight="1"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:drawableTop="@drawable/baseline_logout_24"
                android:drawableTint="@color/black"
                android:paddingTop="10dp"
                android:text="sign out" />

        </GridLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>