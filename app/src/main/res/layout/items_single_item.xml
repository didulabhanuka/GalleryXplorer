<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/background_color">

    <ImageView
        android:id="@+id/items_singleItem_mainImage"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/items_singleItem_secondImage"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:visibility="gone" />

    <ImageView
        android:id="@+id/items_singleItem_thirdImage"
        android:layout_width="168dp"
        android:layout_height="168dp"
        android:visibility="gone" />

    <TextView
        android:id="@+id/items_singleItem_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAllCaps="true"
        android:text="Name"
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/items_singleItem_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:text="Price"
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/items_singleItem_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/elements_color"
        android:text="VIEW"
        android:textSize="16sp"
        android:padding="8dp" />

    <TextView
        android:id="@+id/items_singleItem_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/items_singleItem_sellerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/items_singleItem_medium"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/items_singleItem_subject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/items_singleItem_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/items_singleItem_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>