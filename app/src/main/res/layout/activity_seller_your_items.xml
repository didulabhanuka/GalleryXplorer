<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller_YourItems"
    android:padding="20dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/tv_your_items_title"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/your_items_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_your_items_addNewItem"
        style="@style/ButtonGreen"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="addd new item"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_your_items_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_your_items_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/your_items_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_your_items_addNewItem" />

</androidx.constraintlayout.widget.ConstraintLayout>