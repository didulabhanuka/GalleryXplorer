<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_color"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/events_singleEvent_eventBanner"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/events_singleEvent_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAllCaps="true"
        android:text="Name"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/events_singleEvent_textVenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Date :"/>

        <TextView
            android:id="@+id/events_singleEvent_venue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:text="Name" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/events_singleEvent_textDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:text="Time :"/>

        <TextView
            android:id="@+id/events_singleEvent_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="12sp"
            android:text="Name" />

    </LinearLayout>

    <TextView
        android:id="@+id/events_singleEvent_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textColor="@color/elements_color"
        android:text="VIEW"
        android:textSize="16sp"
        android:padding="1dp" />

    <TextView
        android:id="@+id/events_singleEvent_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/events_singleEvent_organizers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Name"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/events_singleEvent_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/events_singleEvent_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/events_singleEvent_sellerId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/events_singleEvent_randomId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

    <TextView
        android:id="@+id/events_singleEvent_sellerName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" />

</LinearLayout>