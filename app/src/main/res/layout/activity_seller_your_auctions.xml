<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Seller_YourAuctions"
    android:padding="20dp"
    android:background="@color/background_color">

    <TextView
        android:id="@+id/tv_your_auctions_title"
        style="@style/Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="@string/your_auction_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_your_auctions_addNewAuction"
        style="@style/ButtonGreen"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="144dp"
        android:text="add new auction"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_your_auctions_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_your_auctions_title" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_your_auctions_viewbid"
        style="@style/ButtonGreen"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="View bids"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/tv_your_auctions_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_your_auctions_title" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/your_auctions_recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_your_auctions_addNewAuction" />

</androidx.constraintlayout.widget.ConstraintLayout>
